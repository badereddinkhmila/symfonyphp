{% extends "partials/_sideNav2.html.twig" %}
{%  block style %}
<link rel="stylesheet" href="/css/B4datatables.css">
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.6/css/responsive.bootstrap4.min.css">
{% endblock %}
{% block main %}
    <div class="container-fluid m-0 m-sm-1">
        {% for label , message in app.flashes %}
            <div class="toast toast-{{label}}" role="alert" aria-atomic="true" style="z-index: 1000;position:absolute;top: 0;right: 0" data-animation="true" data-auhide="true" data-delay="3000" aria-live="assertive" aria-atomic="true">
                <div class="toast-header toast-{{label}}">
                    <strong class="mr-auto"><i class="fas fa-check-circle"></i> Succès!</strong>
                    <small>à l'instant</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    {% if label == 'danger' %}
                        {% for msg in message %}
                            <p><i class="fas fa-user-md slashed"></i> {{ msg | raw }} </p>
                        {% endfor %}
                    {% elseif label=='success' %}
                        {% for msg in message %}
                            <p> <i class="fas fa-user-md"></i> {{ msg | raw }} </p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        {% endfor %}

        <div class="mb-3 mt-5 card-body my-title d-flex bg-1-lightpink align-items-center rounded">
            <span class="text-bold mr-auto">Liste des docteurs</span>
            <div data-target="#add_doctor" data-toggle="modal" title='Ajouter docteur' class="btn btn-light d-flex align-content-center ml-auto" type="button">
                    <img src="{{asset('images/doctor.svg')}}" alt="docs" style="width:64px;height:32px">
            </div>
        </div>
        <div class="d-flex mt-3 justify-items-start card shadow rounded p-2 w-100">
            <img src="{{ asset('images/spinner.svg') }}" id="loader" class="spinner">
            <table id="datatable" class="table table-striped table-bordered d-none hover w-100">
                <thead>
                <tr>
                    <th scope="col"><i class="fas fa-user-md"></i> Prénom</th>
                    <th scope="col"><i class="fas fa-user-md"></i> Nom</th>
                    <th scope="col"><i class="fas fa-camera-retro"></i> Avatar</th>
                    <th scope="col"><i class="fas fa-mail-bulk"></i> Email</th>
                    <th scope="col"><i class="fas fa-users-cog"></i> Actions</th>
                </tr>
                </thead>
                <tbody class="text-center">
                </tbody>
            </table>
        </div>
    </div>
    {% include "partials/_modal.html.twig" with {form:form , modalID:"add_doctor",User:"Docteur"} %}

    <div tabindex="-1" class="modal fade" id="confirmModal" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="my-title"><span><i class="fas fa-user-md fa-2x mr-3 slashed"></i></span> Supprimer docteur</div>
                    <i class="far fa-times-circle close" type="button" aria-hidden="true" data-dismiss="modal"></i>
                </div>
                <div class="modal-body text-center">
                    <bold>Voulez vous vraiment supprimer ce docteur !</bold>
                    <p>Cette opération est irréversible</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <form method="post" id="formdel">
                        <button type="submit" id="confdel" class="btn btn-warning"><i class="fas fa-exclamation-triangle"></i> Confirmer suppression</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascript %}
<script src="{{ asset('js/JQdatatable.js')}}" ></script>
<script src="{{ asset('js/Datatables.bootstrap.js')}}"></script>
<script src="{{asset('js/responsivetables.js')}}"></script>
<script src="{{asset('js/DtB4resp.js')}}"></script>
<script type="text/javascript">
$(document).ready(function(){
            if("{{errors}}" == 1){
               $('#add_doctor').modal('show');
            }
            $('.toast').toast('show')
    $.ajax({
        url:"/admin/json/doctors",
        method:"GET",
        dataType:"json",
        async:true,
        success:function(data){
            $('#datatable').DataTable({
            "pagingType": "simple_numbers",
            responsive:true,
            "language": {
                "url": "{{ asset('js/DataTable_Frensh.json') }}"
        },
            data:data,
            columns:[
                {'data':'firstname'},
                {'data':'lastname'},
                {'data':'avatar',
                "render": function (data, type, JsonResultRow, meta) {
                return '<img class="avatar avatar-small" src="'+JsonResultRow.avatar+'">';
                }},
                {'data':'email'},
                {'data':'id',
                "render":function(data,type,JsonResultRow,meta){
                    return '<a class="text-danger m-1 delete" id="'+JsonResultRow.id+'"><i class="fas fa-trash"></i></a><a href="/profil/'+JsonResultRow.id+'" class="text-info m-1"><i class="fas fa-id-card-alt"></i></a>'
                    }
                }
            ],
        });
        }
            }).done(function(){
                $("#loader").hide();
                $("#datatable").removeClass('d-none');
            });
        });
    $(document).on('click','.delete',function(){
    let doctor_id=$(this).attr('id');
    $('#confirmModal').modal('show');
    $('#formdel').attr("action","/admin/docteurs/"+doctor_id+"/delete");
});
</script>
{% endblock %}
