{% extends "partials/_sideNav2.html.twig" %}
{% block main %}
    <div class="container-fluid mt-1 mb-5 mt-md-3">
        <div class="row">
            <div class="col-lg-3 col-sm-6 col-12">
            <div class="card-counter bg-theme shadow my-title">
                <div class="row ml-2 d-flex align-items-center card-write">
                    <div class="avatar-md card-icon" id="compl-logo"></div>
                    <span class="count-numbers">{{ complaints }}</span>
                    <span class="count-name">Réclamations</span>
                </div>
                <div class="col-12 card-chart">
                    <div id="spark1"></div>
                </div>
            </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-12">
            <div class="card-counter bg-theme shadow my-title">
                <div class="row ml-2 d-flex align-items-center card-write">
                    <div class="avatar-md card-icon" id="meeting"></div>
                    <span class="count-numbers">{{ countrdv }}</span>
                    <span class="count-name">Randez-vous</span>
                </div>
                <div class="col-12 card-chart">
                    <div id="spark2"></div>
                </div>
            </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-12">
            <div class="card-counter bg-theme shadow my-title">
                <div class="row ml-2 d-flex align-items-center card-write">
                    <div class="card-icon avatar-md" id='detector'></div>
                    <span class="count-numbers">{{ dispositif }}</span>
                    <span class="count-name">Dispositifs</span>
                </div>
                <div class="col-12 card-chart">
                    <div id="spark3"></div>
                </div>
            </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-12">
            <div class="card-counter bg-theme shadow my-title">
                <div class="row ml-2 d-flex align-items-center card-write">
                    <i class="fas fa-procedures card-icon"></i>
                    <span class="count-numbers">{{ patients }}</span>
                    <span class="count-name">Patients</span>
                </div>
                <div class="col-12 card-chart">
                    <div id="spark4"></div>    
                </div>

            </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12 col-md-6 p-2">
                        <div class="card table-responsive rounded text-dark shadow-lg bg-1-lightpink">
                            <div class="my-title text-center m-2">
                                <i class="fas fa-hospital-user"></i> Patients (5+)
                            </div>
                            <div class="table-responsive">
                                <table class="card-table table-bordered table">
                                <thead>
                                    <tr>
                                        <th scope="col"><i class="far fa-user"></i> Prénom</th>
                                        <th scope="col"><i class="far fa-user"></i> Nom</th>
                                        <th scope="col"><i class="fas fa-camera-retro"></i> Avatar</th>
                                        <th scope="col"><i class="far fa-calendar-alt"></i> Date d'ajout</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                    {% for pt in pts %}
                                        <tr>
                                            <td>
                                                {{ pt.firstname }}
                                            </td>
                                            <td>
                                                {{ pt.lastname }}
                                            </td>
                                            <td>
                                                <div class="col-12 text-center">
                                                    <img src="{{ pt.avatar }}" class="avatar avatar-small" alt="avatar">
                                                </div>
                                            </td>
                                            <td>
                                                {{ pt.date }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
            </div>
            <div class="col-12 col-md-6 p-2">
                        <div class="card table-responsive bg-1-dark rounded shadow-lg">
                            <div class="my-title text-center m-2 text-white">
                                <i class="far fa-calendar-plus"></i> Randez-vous (5+)
                            </div>
                            <div class="table-responsive">
                                <table class="table-sm text-white table-bordered table-striped table h-25 overflow-auto">
                                <thead>
                                    <tr>
                                        <th scope="col"><i class="fas fa-ellipsis-v"></i> Type</th>
                                        <th scope="col"><i class="far fa-user"></i> Patient</th>
                                        <th scope="col"><i class="far fa-calendar-alt"></i> Date</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                    {% for rdv in rdvs %}
                                        <tr>
                                            <td>
                                                {{ rdv.type }}
                                            </td>
                                            <td>
                                                <div class="col-12 text-center">
                                                    <img src="{{ rdv.person }}" class="avatar avatar-small" alt="avatar">
                                                    <span> {{ rdv.fname }}</span> <span>{{ rdv.lname }}</span>
                                                </div>
                                            </td>
                                            <td>
                                                {{ rdv.start }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
            </div>
            <div class="col-12 col-md-8 p-2 m-auto">
                <div class="rounded-lg shadow-lg bg-2-dark">
                    <div class="my-title text-center m-2 text-white">
                        <i class="far fa-thumbs-down"></i> Réclamations (5+)
                    </div>
                    <div class="table-responsive">
                        <table class="table-sm table-bordered text-white table-striped table">
                        <thead>
                            <tr>
                                <th scope="col"><i class="fas fa-ellipsis-v"></i> Type</th>
                                <th scope="col"><i class="far fa-user"></i> Patient</th>
                                <th scope="col"><i class="far fa-calendar-alt"></i> Date</th>
                                <th scope="col"><i class="fas fa-chart-line"></i> Etat</th>
                            </tr>
                        </thead>
                            <tbody>
                            {% for comp in comps %}
                                <tr>
                                    <td>
                                        {{ comp.type }}
                                    </td>
                                    <td>
                                        <div class="col-12 text-center">
                                            <img src="{{ comp.person }}" class="avatar avatar-small" alt="avatar">
                                            <span> {{ comp.fname }}</span> <span>{{ comp.lname }}</span>
                                        </div>
                                    </td>
                                    <td>
                                        {{ comp.start }}
                                    </td>

                                    <td>
                                        {% if comp.status == false %}
                                            <i class="fas fa-spinner"></i>
                                        {% else %}
                                            <i class="fas fa-check"></i>
                                        {% endif%}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>  
    </div>
{% endblock %}
 {% block javascript %}

    <script src="{{asset('js/apexchart.js')}}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Counter-Up/1.0.0/jquery.counterup.js"></script>
    <script src="{{asset('js/dashboard.js')}}"></script>
    <script>
        $(".count-numbers").counterUp({delay:1,time:200});
        $(document).ready(function() {
          $.get('/dashboard/stats',function(response) {
            console.log(response);
          })
        })
    </script>
 {% endblock %}