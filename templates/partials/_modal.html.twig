<div tabindex="-1" class="modal fade" id="{{modalID}}" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header d-flex align-content-center">
                <img class="avatar-small mr-2" src="{{asset('images/adduser.svg')}}"><h3 class="modal-title my-title">Nouveau {{User}}</h3>
                <i class="far fa-times-circle close" type="button" aria-hidden="true" data-dismiss="modal"></i>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-12 col-md-6">{{ form_row(form.firstname) }}</div>
                    <div class="col-12 col-md-6">{{form_row(form.lastname)}}</div>
                </div>
                <div class="row align-content-start">
                    <div class="col-6 col-md-4">
                    {{ form_row(form.email) }}
                    </div>
                    <div class="col-6 col-md-4">{{form_row(form.password)}}</div>
                    <div class="col-10 col-md-4">
                    {{form_row(form.birthdate)}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6">{{ form_row(form.gender) }}</div>
                    <div class="col-6 col-md-6">{{form_row(form.age)}}</div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-12">{{form_row(form.address)}}</div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-12">{{form_row(form.phone)}}</div>
                </div>
                <div class="row justify-content-center form-group">
                {{form_label(form.avatar)}}
                {{form_widget(form.avatar)}}
                </div>
                <hr>
                <div class="text-center">
                    <button type="submit" class="btn bg-1-lightpink"><i class="fas fa-save"></i>  Confirmer la cr√©ation</button>
                </div>    
                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>        

<script>
$(".custom-file-input").on("change", function() {
  var fileName = $(this).val().split("\\").pop();
  $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
});
</script>