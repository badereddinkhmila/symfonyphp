                            <i class="fas fa-bars"></i>
                        </div>
                        <a href="{{path('welcome_page')}}" class="d-flex ml-1 w-50 justify-content-end justify-content-lg-start">
                        <div class="navbar-brand" id="textlogo"></div>
                        </a>
                        <a class="d-inline-block d-lg-none ml-auto navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <i class="far fa-caret-square-down" id="navbar-togg"></i>
                        </a>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <div class="ml-md-auto d-flex justify-content-lg-end">
