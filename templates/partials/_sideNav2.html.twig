                <hr>
                {% if app.user %}
                <li class="mb-0">    
                    <a href="{{path('User_logout')}}">
                        <i class="avatar-small" id="logout-logo"></i>
                        <span>Déconnexion</span>
                    </a>
                </li>
                {% else %}
                <li class="mb-0">    
