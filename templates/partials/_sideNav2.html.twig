                                </div>
                                <div class="nav-item d-flex align-self-center justify-content-center col-2 col-lg-2">
                                    <a class="nav-link" href="#"><i class="avatar-micro nav-icon" id="compl-logo"></i><span class="badge badge-pill badge-danger notification">9+</span>
                                    </a>
                                </div>
                                <div class="nav-item d-flex align-self-center col-4 col-lg-3 justify-content-center">
                                    <i class="far fa-sun align-self-center mr-2 ml-1"></i>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="customSwitch1">
                                        <label class="custom-control-label" for="customSwitch1"></label>
                                    </div>
                                    <i class="far fa-moon align-self-center"></i>
                                </div>
                                <div class="d-flex align-self-center col-lg-1 col-2 ml-lg-3 justify-content-center">
                                    {% if app.user %}
                                        <img src="{{app.user.avatar}}" alt="#" class="avatar avatar-small">   
                                    {% else %}
                                    <img src="{{asset('images/A-avatar.png')}}" alt="#" class="avatar avatar-small">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                </nav>
                <div id="page-content" class="mt-5 mb-5 m-sm-auto">
                    {% block main %}

                    {% endblock %}
                </div>
            </div>
    </div>
    

    {% block javascript %}
        
    {% endblock %}
    <script type="text/javascript">
        $(document).ready(function () {
            if($('.user-name').text().length>77){
                $('.user-name em').hide();
            }

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar,#content').toggleClass('active');
                if($('#sidebar').hasClass('active')){
                    $(this).html('<i class="fas fa-times nav-icon"></i>');
                }
                else{
                    $(this).html('<i class="fas fa-bars nav-icon"></i>');
                }
            });


            var customSwitch1=document.getElementById('customSwitch1'); 
            if(customSwitch1){
                initTheme();

                $('#customSwitch1').change(function(){
                    resetTheme(); 
                });
                function initTheme() {
                    var darkThemeSelected = (localStorage.getItem('customSwitch1') !== null && localStorage.getItem('customSwitch1') === 'dark');
                    customSwitch1.checked = darkThemeSelected;
                    darkThemeSelected ? document.body.setAttribute('data-theme', 'dark') : document.body.removeAttribute('data-theme');
                };

                function resetTheme() {
                    if(customSwitch1.checked) { 
                        document.body.setAttribute('data-theme', 'dark');
                        localStorage.setItem('customSwitch1', 'dark'); 
                    } else {
                        document.body.removeAttribute('data-theme');
                        localStorage.removeItem('customSwitch1');
                    } 
                };
            }
        });
        if (window.innerWidth <= 768) {
            $('#sidebar,#content').addClass('active');
        }
        $(window).resize(function() {
        if (window.innerWidth <= 768) {
            $('#sidebar,#content').addClass('active');}
            else{
                $('#sidebar,#content').removeClass('active');
            }
        });
    </script>
</body>
{% endblock body %}
</html>
