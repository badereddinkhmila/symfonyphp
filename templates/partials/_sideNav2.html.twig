    <script src="{{asset('js/bootstrap.min.js')}}"></script>
    {% block javascript %}
        
    {% endblock %}
    <script type="text/javascript">
        $(document).ready(function () {
            
            if($('navbar-toggler').attr('aria-expanded')==true){
            console.log(this);    
            }

            if($('.user-name').text().length>77){
                $('.user-name em').hide();
            }

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                if($('#sidebar').hasClass('active')){
                    $(this).html('<i class="fas fa-times nav-icon"></i>');
                }
                else{
                    $(this).html('<i class="fas fa-bars nav-icon"></i>');
                }
            });


            var customSwitch1=document.getElementById('customSwitch1'); 
            if(customSwitch1){
                initTheme();

                $('#customSwitch1').change(function(){
                    resetTheme(); 
                });
                function initTheme() {
                    var darkThemeSelected = (localStorage.getItem('customSwitch1') !== null && localStorage.getItem('customSwitch1') === 'dark');
                    customSwitch1.checked = darkThemeSelected;
                    darkThemeSelected ? document.body.setAttribute('data-theme', 'dark') : document.body.removeAttribute('data-theme');
                };

                function resetTheme() {
                    if(customSwitch1.checked) { 
                        document.body.setAttribute('data-theme', 'dark');
                        localStorage.setItem('customSwitch1', 'dark'); 
                    } else {
                        document.body.removeAttribute('data-theme');
                        localStorage.removeItem('customSwitch1');
                    } 
                };
            }
        });
        $(window).resize(function() {
        if (window.innerWidth <= 830) {$('#sidebar').addClass('active');}
            else{
                $('#sidebar').removeClass('active');
            }
        });
    </script>
   
   
</body>
