{% extends 'partials/_sideNav2.html.twig' %}

{% block main %}
    <div class="container-fluid row d-flex align-items-center justify-content-center">
        <div class="d-none d-md-inline col-md-7 p-2">
            <img src="{{asset('images/forgot-password.png')}}" class="w-100 h-100" alt="password">
        </div>
        <div class='col-sm-10 col-md-5 p-2'>
            <div class="card shadow-lg rounded">
                <div class="title text-center text-mui my-title">
                    Réinitialiser mot de passe
                </div>
                <div class="card-body">
                <br>
                    {{ form_start(resetForm) }}
                    <div class="row form-group">
                        <div class="col-12">
                            {{form_label(resetForm.plainPassword.first) }}
                            <div class="input-with-icon d-flex align-items-center">
                                {{form_widget(resetForm.plainPassword.first,{ 'id': 'user_form_password_first' }) }}
                                <i class="far fa-eye" id="password_eye2"></i>
                            </div>
                            <small>{{ form_help(resetForm.plainPassword.first) }}</small>
                        </div>
                        <div class="col-12">
                            {{form_label(resetForm.plainPassword.second) }}
                            <div class="input-with-icon d-flex align-items-center">
                                {{form_widget(resetForm.plainPassword.second,{ 'id': 'user_form_password_second' }) }}
                                <i class="far fa-eye" id="password_eye3"></i>
                            </div>
                            <small>{{ form_help(resetForm.plainPassword.second) }}</small>
                        </div>
                    </div>
                    <br>
                    <hr>
                    <div class="form-group row justify-content-center">
                        <button class="btn bg-1-lightpink"><i class="far fa-save"></i>Réinitialiser</button>
                    </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
